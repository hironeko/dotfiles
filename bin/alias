# alias

# ls
alias l="ls -la"

# open mac only
alias op='open -a'
alias opv="open -a 'visual studio code'"

# Git command
alias gs="git status"
alias gd="git diff"
alias ga="git add"
alias g-p-r="git pull --rebase"
alias g-p-o="git pull origin"
alias g-c-b="git checkout -b"

# tmux
alias ts='tmux new -s'
alias tks='tmux kill-session'
alias tl='tmux ls'
alias ta='tmux a'


# docker-compose
alias dc="docker compose"
alias dce="docker compose exec"

# 2つ上に移動できるようにする
alias ...='cd ../..'

# 使用されているportのチェック
alias lipL="lsof -i -P | grep 'LISTEN'"

# terraform
alias tf="terraform"
alias tfi="terraform init"
alias tfp="terraform plan"
alias tfd="terraform destroy"
alias tfd-auto="terraform destroy --auto-approve"
alias tfa="terraform apply"
alias tfa-auto="terraform apply --auto-approve"

# saml2aws
alias s2a="saml2aws login -a"

# kubectl
alias k8s="kubectl"

# aws samle connect
alias saml2-login-saml-ab-developer="saml2aws login -a saml-ab-developer"

# プロセスツリーの表示
alias ps-t="ps -e f" 

# lazygitのalias
alias lgit="lazygit"

# aws-vault関連のalias
alias ave="aws-vault exec"

alias difit-t="npx difit --tui "
